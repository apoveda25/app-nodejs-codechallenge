{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/transaction/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/transaction/tsconfig.app.json",
    "assets": [
      {
        "include": "**/*.graphql",
        "watchAssets": true
      },
      {
        "include": "assets/i18n/**/*.json",
        "watchAssets": true
      }
    ]
  },
  "monorepo": true,
  "root": "apps/transaction",
  "projects": {
    "transaction": {
      "type": "application",
      "root": "apps/transaction",
      "entryFile": "main",
      "sourceRoot": "apps/transaction/src",
      "compilerOptions": {
        "tsConfigPath": "apps/transaction/tsconfig.app.json"
      }
    },
    "antifraud": {
      "type": "application",
      "root": "apps/antifraud",
      "entryFile": "main",
      "sourceRoot": "apps/antifraud/src",
      "compilerOptions": {
        "tsConfigPath": "apps/antifraud/tsconfig.app.json"
      }
    },
    "shared": {
      "type": "library",
      "root": "libs/shared",
      "entryFile": "index",
      "sourceRoot": "libs/shared/src",
      "compilerOptions": {
        "tsConfigPath": "libs/shared/tsconfig.lib.json"
      }
    }
  }
}
